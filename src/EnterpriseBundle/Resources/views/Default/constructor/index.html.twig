{% extends 'EnterpriseBundle:Default:template.html.twig' %}
{% block content %}
    <div class="constructor_page index">
        <div class="constructor">
            <div class="static_pages">Static Pages</div>
            <div class="add_form" id="add_form">
                <div class="left">
                    <form action="#">
                        <input id="static_url" pattern="^[a-z\-]+$" type="text" placeholder="URL, [a-z\-]">
                        <input id="static_name" type="text" placeholder="Название">
                        <textarea id="static_html" placeholder="HTML(Optional)"></textarea>
                        <input id="save_static" class="round" type="submit" value="ok">
                    </form>
                </div>
                <div class="right">
                    {% for i in static %}
                        <a class="static_single" href="/{{ i.title }}" target="_blank">{{ i.canonical }} => /{{ i.title }}</a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block script %}
    {{ parent() }}
    {% javascripts '@EnterpriseBundle/Resources/public/js/constructor.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}