{% extends 'EnterpriseBundle:Default:template.html.twig' %}
{% block content %}
    <div class="documents_page index">
        <div class="documents">
            {% for i in sellers %}
                <div class="seller_single">
                    <div class="documents_single {% if i.seller_id is empty %}red{% endif %}">
                        <div class="seller">{{ i.name }}</div>
                        {% if i.seller_id == 5 %}
                        <div class="to_site" id="to_site">На сайт</div>

                        {% elseif i.seller_id is not empty %}
                            <div class="parse" id="{{ i.id }}parse">В базу</div>
                        {% endif %}
                        <input type="file" id="{{ i.id }}">
                    </div>
                    {% if i.seller_id is empty %}
                    <table class="custom_excel">
                        <tr>
                            <td>Артикул</td>
                            <td>Название</td>
                            <td>Категория</td>
                            <td>Цена</td>
                            <td>Описание</td>
                            <td>Короткое описание</td>
                            <td>Изображение</td>
                            <td>Свойства товара</td>
                        </tr>
                        <tr>
                            <td class="droppable" id="VendorCode"></td>
                            <td class="droppable" id="Name"></td>
                            <td class="droppable" id="Category"></td>
                            <td class="droppable" id="Price"></td>
                            <td class="droppable" id="Description"></td>
                            <td class="droppable" id="shortDescription"></td>
                            <td class="droppable" id="Image"></td>
                            <td class="droppable" id="Properties"></td>
                        </tr>
                    </table>

                    <div class="prepare std_btn">Настроить</div>
                    <div class="save_setting std_btn">Сохранить</div>
                        <div class="fields"></div>
                    {% endif %}
                </div>
            {% endfor %}

        </div>


    </div>
    {#{{ dump() }}#}
{% endblock %}
{% block script %}
    {{ parent() }}
    {% javascripts
    '@EnterpriseBundle/Resources/public/js/documents.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}